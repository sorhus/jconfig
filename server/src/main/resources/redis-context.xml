<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <import resource="properties.xml" />
  <bean id="jedisPool" class="redis.clients.jedis.JedisPool">
    <constructor-arg index="0" value="${REDIS_PORT_6379_TCP_ADDR}"/>
    <constructor-arg index="1" value="${REDIS_PORT_6379_TCP_PORT}" type="int"/>
  </bean>
  <bean id="dao" class="com.github.sorhus.jconfig.dao.RedisDAO">
    <constructor-arg index="0" ref="jedisPool"/>
    <constructor-arg index="1" value="configs"/>
  </bean>

</beans>
